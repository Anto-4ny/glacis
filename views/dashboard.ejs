<script type="module">
import { auth, db, doc, getDoc, updateDoc, query, collection, getDocs, addDoc, increment, onAuthStateChanged, onSnapshot } from "./script.js";

document.addEventListener("DOMContentLoaded", async () => {
    const popup = document.getElementById("payment-popup");
    const errorMessageDiv = document.getElementById("error-message");
    const successMessageDiv = document.getElementById("success-message");
    const payBtn = document.getElementById("pay-btn");
    const copyButtons = document.querySelectorAll(".copy-wallet");
    const txidInput = document.getElementById("txid");
    const walletAddressInput = document.getElementById("wallet-address");

    const showMessage = (message, type) => {
        const messageDiv = type === "success" ? successMessageDiv : errorMessageDiv;
        messageDiv.textContent = message;
        messageDiv.classList.remove("hidden");
        messageDiv.classList.add(type === "success" ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700");

        setTimeout(() => {
            messageDiv.classList.add("hidden");
        }, 4000);
    };

    // Copy wallet address functionality
    copyButtons.forEach(button => {
        button.addEventListener("click", () => {
            const walletAddress = button.getAttribute("data-wallet");
            navigator.clipboard.writeText(walletAddress);
            showMessage("Copied: " + walletAddress, "success");
        });
    });

    // Monitor user authentication state
    onAuthStateChanged(auth, async (user) => {
        if (user) {
            const userRef = doc(db, "users", user.email);

            // **Listen for real-time Firestore updates**
            onSnapshot(userRef, (userSnap) => {
                if (userSnap.exists()) {
                    const userData = userSnap.data();

                    if (userData.membershipApproved === true) {
                        popup.classList.add("hidden"); // Hide pop-up when approved
                        showMessage("✅ Membership approved! You now have access.", "success");
                    }
                }
            });
        }
    });

    if (payBtn) {
        payBtn.addEventListener("click", async (event) => {
            event.preventDefault(); // Prevent form reload

            const txid = txidInput.value.trim();
            const walletAddress = walletAddressInput.value.trim();
            const user = auth.currentUser;

            if (!txid || !walletAddress) {
                showMessage("⚠️ All fields are required.", "error");
                return;
            }

            if (user?.email) {
                try {
                    const validatorsQuery = query(collection(db, "validators"));
                    const validatorsSnapshot = await getDocs(validatorsQuery);
                    const validators = validatorsSnapshot.docs.map(doc => doc.id);

                    if (validators.length < 2) {
                        showMessage("⚠️ Not enough validators available.", "error");
                        return;
                    }

                    const assignedValidators = validators.sort(() => 0.5 - Math.random()).slice(0, 2);

                    await addDoc(collection(db, "payments"), {
                        email: user.email,
                        txid,
                        walletAddress,
                        status: "pending",
                        assignedValidators,
                        approvals: 0,
                        type: "membership"
                    });

                    // **Update Firestore that the user has paid**
                    const userRef = doc(db, "users", user.email);
                    await updateDoc(userRef, { membershipPaid: true });

                    showMessage("✅ Payment submitted! Awaiting validation.", "success");
                    popup.classList.add("hidden"); // Hide pop-up on successful submission
                } catch (error) {
                    showMessage(`❌ Error: ${error.message}`, "error");
                    console.error("Payment Submission Error:", error);
                }
            } else {
                showMessage("❌ User not authenticated. Please log in.", "error");
            }
        });
    }

    // ✅ **Live Validator Approval Logic (Real-Time Updates)**
    const paymentsQuery = query(collection(db, "payments"));
    onSnapshot(paymentsQuery, async (snapshot) => {
        snapshot.docChanges().forEach(async (change) => {
            if (change.type === "modified") {
                const paymentData = change.doc.data();

                if (paymentData.approvals >= 2 && paymentData.status !== "approved") {
                    const paymentDoc = doc(db, "payments", change.doc.id);

                    // **Update payment status to approved**
                    await updateDoc(paymentDoc, { status: "approved" });

                    // **Mark user as membership approved**
                    const userRef = doc(db, "users", paymentData.email);
                    await updateDoc(userRef, { membershipApproved: true });

                    showMessage("✅ Payment approved successfully!", "success");
                }
            }
        });
    });
});

