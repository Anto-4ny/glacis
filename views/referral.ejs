    <script type="module">
import { auth, db, doc, getDoc, query, collection, where, getDocs } from "./script.js";

document.addEventListener("DOMContentLoaded", async () => {
    try {
        const user = auth.currentUser;
        if (!user) return;
        const userId = user.uid;

        // Fetch user data
        const userRef = doc(db, "users", userId);
        const userSnap = await getDoc(userRef);
        if (!userSnap.exists()) return;
        const userData = userSnap.data();
        
        // Update Referral Link
        const referralLink = userData.referralLink;
        document.getElementById("referral-link").textContent = referralLink;
        document.getElementById("whatsapp-share-button").href = `https://wa.me/?text=Join%20using%20my%20referral%20link:%20${referralLink}`;

        // Fetch referred users
        const referredUsersQuery = query(collection(db, "users"), where("referrerId", "==", userId));
        const referredUsersSnap = await getDocs(referredUsersQuery);
        const referredUsers = referredUsersSnap.docs.map(doc => doc.data());

        // Update Statistics
        document.querySelector(".bg-blue-100 p.text-2xl").textContent = referredUsers.length;
        document.querySelector(".bg-green-100 p.text-2xl").textContent = `$${userData.totalEarnings}`;
        document.querySelector(".bg-purple-100 p.text-2xl").textContent = referredUsers.filter(u => u.isValidator).length;

        // Populate Referred Users Table
        const tbody = document.querySelector("table tbody");
        tbody.innerHTML = "";

        if (referredUsers.length === 0) {
            tbody.innerHTML = `<tr><td colspan='3' class='p-3 text-center text-gray-500'>No referrals yet. Share your link to start earning!</td></tr>`;
        } else {
            referredUsers.forEach(user => {
                const row = `<tr class='text-center'>
                    <td class='p-3 border'>${user.firstName} ${user.lastName}</td>
                    <td class='p-3 border ${user.paymentStatus === 'Approved' ? 'text-green-600' : 'text-red-500'}'>${user.paymentStatus || 'Pending'}</td>
                    <td class='p-3 border'>${new Date(user.registeredAt).toLocaleDateString()}</td>
                </tr>`;
                tbody.innerHTML += row;
            });
        }

        // Fetch and populate Leaderboard
        const leaderboardQuery = query(collection(db, "users"));
        const leaderboardSnap = await getDocs(leaderboardQuery);
        const leaderboardData = leaderboardSnap.docs.map(doc => doc.data());
        leaderboardData.sort((a, b) => b.totalReferrals - a.totalReferrals);

        const leaderboardBody = document.querySelector(".bg-white.shadow-lg:nth-of-type(4) tbody");
        leaderboardBody.innerHTML = "";

        if (leaderboardData.length === 0) {
            leaderboardBody.innerHTML = `<tr><td colspan='4' class='p-3 text-center text-gray-500'>No rankings yet. Keep sharing your link to get ranked!</td></tr>`;
        } else {
            const medals = ["🥇", "🥈", "🥉"];
            leaderboardData.slice(0, 3).forEach((user, index) => {
                const row = `<tr class='text-center'>
                    <td class='p-3 border text-yellow-500'>${medals[index] || index + 1}</td>
                    <td class='p-3 border'>${user.firstName}</td>
                    <td class='p-3 border'>${user.totalReferrals}</td>
                    <td class='p-3 border'>$${user.totalEarnings}</td>
                </tr>`;
                leaderboardBody.innerHTML += row;
            });
        }
    } catch (error) {
        console.error("Error fetching referral data:", error);
    }
});

    </script>
    
