<script type="module">
    import { auth, db, doc, getDoc } from "./script.js";

    async function loadUserProfile() {
        const user = auth.currentUser;
        if (!user) return;

        const userRef = doc(db, "users", user.uid);
        const userSnap = await getDoc(userRef);

        if (userSnap.exists()) {
            const userData = userSnap.data();
            const usernameElement = document.getElementById("username");
            const messageBox = document.getElementById("message-box");

            // Display user name with Font Awesome blue tick if verified
            usernameElement.innerHTML = `${userData.firstName} ${userData.lastName}`;
            if (userData.isValidator) {
                usernameElement.innerHTML += ` <i class="fa-solid fa-circle-check text-blue-500"></i>`;
            }

            function showMessage(type, text) {
                messageBox.innerHTML = `<div class="p-2 rounded-lg ${type === "success" ? "bg-green-200 text-green-800" : "bg-red-200 text-red-800"}">${text}</div>`;
                setTimeout(() => { messageBox.innerHTML = ""; }, 5000);
            }

            // Change button text dynamically
            const verifyProfileBtn = document.getElementById("verifyProfile");
            const becomeValidatorBtn = document.getElementById("becomeValidator");

            if (userData.isValidator) {
                verifyProfileBtn.innerText = "You are verified";
                verifyProfileBtn.classList.replace("bg-blue-600", "bg-gray-400");
                verifyProfileBtn.classList.replace("hover:bg-blue-700", "hover:bg-gray-500");

                becomeValidatorBtn.innerText = "You are a Validator, Tap to view your Dashboard";
                becomeValidatorBtn.classList.replace("bg-yellow-500", "bg-gray-400");
                becomeValidatorBtn.classList.replace("hover:bg-yellow-600", "hover:bg-gray-500");
            }

            // Button actions
            verifyProfileBtn.addEventListener("click", () => {
                if (userData.isValidator) {
                    showMessage("success", "âœ… You are already verified!");
                } else {
                    window.location.href = "/validator";
                }
            });

            becomeValidatorBtn.addEventListener("click", () => {
                if (userData.isValidator && userData.validatorId) {
                    window.location.href = "/validator-dashboard";
                } else {
                    window.location.href = "/validator";
                }
            });

            document.getElementById("userDetails").addEventListener("click", () => {
                window.location.href = "/profile";
            });

            document.getElementById("withdrawEarnings").addEventListener("click", () => {
                window.location.href = "/withdraw";
            });

        } else {
            console.log("User document does not exist.");
        }
    }

    // Wait for auth state to load
    auth.onAuthStateChanged(user => {
        if (user) {
            loadUserProfile();
        }
    });
</script>

