        <script type="module" src="script.js"></script>
        <script type="module">
            import { auth } from "./script.js";
        
            // ðŸ”¹ Auto-fill Referral Code from URL (If Provided)
            document.addEventListener("DOMContentLoaded", () => {
                const urlParams = new URLSearchParams(window.location.search);
                const referralCode = urlParams.get("referral");
                if (referralCode) {
                    const referralInput = document.getElementById("referral-code");
                    referralInput.value = referralCode;
                }
            });
        
            // ðŸ”¹ Disable Right-Click & Common DevTools Shortcuts
            document.addEventListener("contextmenu", (event) => event.preventDefault()); // Disable right-click
        
            document.addEventListener("keydown", (event) => {
                const blockedKeys = [
                    { ctrl: true, key: "u" }, // View Source (Ctrl + U)
                    { ctrl: true, shift: true, key: "I" }, // DevTools (Ctrl + Shift + I)
                    { ctrl: true, shift: true, key: "J" }, // DevTools (Ctrl + Shift + J)
                    { ctrl: true, key: "S" }, // Save (Ctrl + S)
                    { ctrl: true, key: "P" } // Print (Ctrl + P)
                ];
        
                blockedKeys.forEach(({ ctrl, shift, key }) => {
                    if (event.ctrlKey === ctrl && event.shiftKey === shift && event.key.toLowerCase() === key.toLowerCase()) {
                        event.preventDefault();
                    }
                });
            });
        
        </script>        
