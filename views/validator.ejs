});

// FUNCTION TO GET AVAILABLE VALIDATOR (with exclude & fallback)
async function getAvailableValidator(excludedValidators = [], allowRepeats = false) {
    const validatorQuery = query(collection(db, "users"), where("isValidator", "==", true));
    const validatorSnap = await getDocs(validatorQuery);
    let allValidators = [];

    validatorSnap.forEach(doc => {
        const email = doc.data().email;
        if (email !== "marketquantum25@gmail.com") {
            allValidators.push(doc.id);
        }
    });

    let available = allValidators.filter(v => !excludedValidators.includes(v));

    let chosen = null;

    if (available.length > 0) {
        chosen = available[Math.floor(Math.random() * available.length)];
    } else if (allowRepeats && allValidators.length > 0) {
        chosen = allValidators[Math.floor(Math.random() * allValidators.length)];
    }

    if (chosen) {
        const validatorDoc = await getDoc(doc(db, "users", chosen));
        if (validatorDoc.exists()) {
            const validatorEmail = validatorDoc.data().email;
            await sendEmailNotification(
                validatorEmail,
                "üìå New Payment Validation Assigned",
                `You've been assigned to validate a new payment. Please log in to your dashboard to review it.`
            );
        }
    }

    return chosen;
}

// FUNCTION TO WAIT FOR A VALIDATOR TO BECOME AVAILABLE
function waitForValidator() {
    return new Promise(resolve => setTimeout(resolve, 30000)); // Wait 30 seconds before retrying
}

// FUNCTION TO CONTINUOUSLY CHECK & REASSIGN PAYMENT UNTIL APPROVED
async function startReassignmentLoop(paymentId) {
    const interval = setInterval(async () => {
        const paymentRef = doc(db, "payments", paymentId);
        const paymentSnap = await getDoc(paymentRef);

        if (!paymentSnap.exists()) {
            clearInterval(interval);
            return;
        }

        const paymentData = paymentSnap.data();

        // ‚úÖ Stop reassignment if admin is now handling or it's already approved
        if (["approved-admin", "pending-admin"].includes(paymentData.status)) {
            clearInterval(interval);
            return;
        }

        // ‚úÖ Stop if a validator has already approved
        const approvals = Array.isArray(paymentData.approvals) ? paymentData.approvals : [];
